mixin project_header(name, date, tags, github, youtube, kind)
  article(tags=tags, class=`project taggable hideable project-${kind}` id=name.toLowerCase().split(" ").join("-").replace("*", "_").replace("'", "_"))
    .project-title.pb-2
        h3= name
        p.date= date
        .inline.project-links
            if github
                a.p-3(href=github, target="_blank")
                    .fab.fa-github.fa-2x
            if youtube
                a.p-3(href=youtube, target="_blank")
                    .fab.fa-youtube.fa-2x 
    block 

mixin project_footer()
    .inline.project-tags.pl-2.pt-2
        h5 Tags:

mixin project(name, date, tags, imgurl, github, youtube)
    +project_header(name, date, tags, github, youtube, "desktop")
        .project-single-image-container
            .project-content 
                block
            .project-images.cent
                img.img-primary(src=`assets/img/projects/${imgurl}.png`) 
        +project_footer(github, youtube)
        
mixin project_multiimage(name, date, tags, imgurl1, imgurl2, github, youtube)
    +project_header(name, date, tags, github, youtube, "desktop")
        .project-double-image-container
            .project-content
                block
            .project-images.cent
                img.img-secondary(src=`assets/img/projects/${imgurl1}.png`) 
                img.img-primary(src=`assets/img/projects/${imgurl2}.png`) 
        +project_footer(github, youtube)

mixin project_noimage(name, date, tags, github, youtube)
    +project_header(name, date, tags, github, youtube, "desktop")
        .project-double-image-container
            .project-content
                block
        +project_footer(github, youtube)
